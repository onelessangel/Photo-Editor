# Chelcea Claudiu
---
Language: Cpp

# The base style is WebKit
BasedOnStyle: WebKit

# Align function arguments after linebreak
AccessModifierOffset: -4

# Variable alignment
AlignAfterOpenBracket: AlwaysBreak

# Horizontally align operands
AlignEscapedNewlines: false

# Aligns operands
AlignOperands: true

# Aligns comments properly
AlignTrailingComments: true

# Short statements on a single line
AllowShortBlocksOnASingleLine: false

# Switch cases on a single line
AllowShortCaseLabelsOnASingleLine: false

# Short function
AllowShortFunctionsOnASingleLine: None

# Short if statements
AllowShortIfStatementsOnASingleLine: false

# Short loops on a single line
AllowShortLoopsOnASingleLine: false

# For longer, multiline strings
AlwaysBreakBeforeMultilineStrings: true

# A function callâ€™s arguments will either be all on the same line or on
# a new line each
BinPackArguments: true

# The same thing applies to function definition | declaration
BinPackParameters: true

# Binary operators
BreakBeforeBinaryOperators: None

# Ternary operators
BreakBeforeTernaryOperators: false

# Newlines after certaint elements
BreakBeforeBraces: Linux
BraceWrapping:
  AfterClass:      true
  AfterControlStatement: false
  AfterEnum:       false
  AfterFunction:   true
  AfterNamespace:  true
  AfterObjCDeclaration: true
  AfterStruct:     false
  AfterUnion:      false
  BeforeCatch:     true
  BeforeElse:      false
  IndentBraces:    true
BreakBeforeBraces: Custom

# Break constructor initializers before comma
BreakConstructorInitializersBeforeComma: true

# Line continuation indents
ContinuationIndentWidth: 4

# Line width
ColumnLimit: 80

# Pragmas
CommentPragmas:  '^ IWYU pragma:'

# Constructors
ConstructorInitializerAllOnOneLineOrOnePerLine: true
ConstructorInitializerIndentWidth: 4

# List
Cpp11BracedListStyle: true

# Indent each case by one level
IndentCaseLabels: false
IndentWidth: 4

# The number of consecutive empty lines
MaxEmptyLinesToKeep: 1

# Indent if the function name is wrapped after the type
IndentWrappedFunctionNames: false

# Pointer and reference alignment
NamespaceIndentation: All
PointerAlignment: Right

# Sorting the included files
SortIncludes: false

# Spaces for the assigment operators
SpaceBeforeAssignmentOperators: true

# Spaces for the control statements
SpaceBeforeParens: ControlStatements

# Keep empty parantheses to () than ( )
SpaceInEmptyParentheses: false

# The number of spaces before trailing comments
SpacesBeforeTrailingComments: 1

# Extra spaces for () and [] parantheses
SpacesInParentheses: false
SpacesInSquareBrackets: false

# Spacing options
Standard: Cpp11
TabWidth: 4
UseTab: Always
